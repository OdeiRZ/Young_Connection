{% extends '::layout.html.twig' %}

{% block title %}Listar Alumnos{% endblock %}

{% block content %}
    <h2 class="well">Listado de Alumnos</h2>

    {{ form(formulario_cursos) }}
    {% if alumnos %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Usuario</th>
                <th>Curso</th>
                <th>Problemas de Salud</th>
                <th>Detalles Problemas de Salud</th>
                <th>Fumador</th>
                <th>Bebedor</th>
                <th>Ha Viajado al Extranjero</th>
                <th>Detalles Viaje Extranjero</th>
                <th>Preferencia de Compañero/a</th>
                <th>Descripción</th>
                <th>Idioma/s</th>
                <th>Afición/es</th>
                <th>Dirección Familiar</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for alumno in alumnos %}
                <tr>
                    <td><a href="#">{{ alumno.usuario }}</a></td>
                    <td><a href="#">{{ alumno.curso }}</a></td>
                    <td>{{ alumno.tieneProblemasSalud ? 'Sí' : 'No' }}</td>
                    <td>{{ alumno.detallesProblemasSalud }}</td>
                    <td>{{ alumno.esFumador ? 'Sí' : 'No' }}</td>
                    <td>{{ alumno.esBebedor ? 'Sí' : 'No' }}</td>
                    <td>{{ alumno.haViajadoExtranjero ? 'Sí' : 'No' }}</td>
                    <td>{{ alumno.detallesViajeExtranjero }}</td>
                    <td>
                        <ul>
                        {% for companero in alumno.preferenciaCompanero %}
                            <li>{{ companero.usuario }}</li>
                        {% endfor %}
                        </ul>
                    </td>
                    <td>{{ alumno.descripcion }}</td>
                    <td>
                        {% for idioma in alumno.idiomas %}
                            <ul>{{ idioma.descripcion }}
                                <li>{{ idioma.reading }}</li>
                                <li>{{ idioma.writing }}</li>
                                <li>{{ idioma.speaking }}</li>
                            </ul>
                        {% endfor %}
                    </td>
                    <td>
                        <ul>
                            {% for aficion in alumno.aficiones %}
                                <li>{{ aficion }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>{{ alumno.familia }}</td>
                    <td>
                        <a href="{{ path('alumno_modificar', { 'alumno': alumno.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-pencil"></i> Modificar
                        </a>
                        <a href="{{ path('alumno_eliminar', { 'alumno': alumno.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3>No hay Alumnos para mostrar</h3>
    {% endif %}

    <a href="{{ path('inicio') }}" class="btn btn-info">Volver al Inicio</a>&nbsp;
    <a href="{{ path('alumno_nuevo') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Crear un nuevo Alumno </a>
{% endblock %}