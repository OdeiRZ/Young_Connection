{% extends '::layout.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block content %}
    <h2 class="well">Crear un nuevo Usuario</h2>

    {{ form(formulario) }}

    {% if app.user %}
        <a href="{{ path('usuarios_listar') }}" class="btn btn-info">Volver al listado de Usuarios</a>
    {% else %}
        <a href="{{ path('inicio') }}" class="btn btn-info">Volver al inicio</a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% javascripts '@AppBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}