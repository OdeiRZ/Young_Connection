{% extends '::layout.html.twig' %}

{% block title %}Listar Usuarios{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
{% endblock %}

{% block content %}
    <h2 class="well">Listado de Usuarios</h2>

    {{ form(formulario_auxilar) }}
    {% if usuarios %}
        <table class="table table-bordered table-condensed table-hover table-striped display" id="tabla">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>F. Nacimiento</th>
                <th>Sexo</th>
                <th>Teléfono</th>
                <th>Correo Electrónico</th>
                <th>Fotografía</th>
                <th>Administrador</th>
                <th>Coordinador</th>
                <th>Alumno</th>
                <th>Activo</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for usuario in usuarios %}
                <tr>
                    <td>{{ usuario.apellidos }} {{ usuario.nombre }}</td>
                    <td>{{ usuario.fechaNacimiento|date("d/m/Y") }}</td>
                    <td>{{ (usuario.sexo == 'M' ? 'Masculino' : 'Femenino') }}</td>
                    <td>{{ usuario.telefono }}</td>
                    <td>{{ usuario.correoElectronico }}</td>
                    <td>
                        {% if usuario.getWebPath %}<img src="{{ asset(usuario.getWebPath) }}" alt="{{ usuario.id }}"
                                                        class="img-thumbnail" height="50" width="50" />{% endif %}
                    </td>
                    <td>{{ usuario.esAdministrador ? 'Sí' : 'No' }}</td>
                    <td>{{ usuario.esCoordinador ? 'Sí' : 'No' }}</td>
                    <td>{{ usuario.esAlumno ? 'Sí' : 'No' }}</td>
                    <td>{{ usuario.esActivo ? 'Sí' : 'No' }}</td>
                    <td>
                        <a href="{{ path('usuario_modificar', { 'usuario': usuario.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-pencil"></i>
                        </a>
                        <a href="{{ path('usuario_eliminar', { 'usuario': usuario.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3>No hay Usuarios para mostrar</h3>
    {% endif %}

    <a href="{{ path('inicio') }}" class="btn btn-info">Volver al Inicio</a>&nbsp;
    <a href="{{ path('usuario_nuevo_admin') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Crear un nuevo Usuario </a>
{% endblock %}

{% block javascripts %}
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% javascripts '@AppBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}