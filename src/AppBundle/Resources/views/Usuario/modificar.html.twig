{% extends '::layout.html.twig' %}

{% block title %}Modificar Usuario {{ usuario.correoElectronico }}{% endblock %}

{% block content %}
    <h1 class="well"> Modificar Usuario {{ usuario.correoElectronico }}</h1>

    {{ form(formulario) }}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('usuarios_listar') }}" class="btn btn-info">Volver al listado de Usuarios</a>
    {% else %}
        <a href="{{ path('inicio') }}" class="btn btn-info">Volver al inicio</a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/js/*'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}