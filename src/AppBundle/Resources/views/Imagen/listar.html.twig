{% extends '::layout.html.twig' %}

{% block title %}Listar Imágenes{% endblock %}

{% block content %}
    <h1 class="well">Listado de Imágenes</h1>

    {% if imagenes %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Imágen</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for imagen in imagenes %}
                <tr>
                    <td><img src="{{ asset(imagen.getWebPath) }}" alt="Imágen {{ imagen.id }}" height="100" width="100" /></td>
                    <td>
                        <a href="{{ path('imagen_eliminar', { 'imagen': imagen.id }) }}" class="btn btn-default btn-xs">
                            <i class="glyphicon glyphicon-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>No hay Imágenes para mostrar</h2>
    {% endif %}

    <a href="{{ path('inicio') }}" class="btn btn-info">Volver al Inicio</a>&nbsp;
    <a href="{{ path('imagen_nuevo') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Crear una nueva Imágen </a>
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/js/*'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}