{% extends '::layout.html.twig' %}

{% block title %}Listar Grupos{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="http://cdn.datatables.net/1.10.7/css/jquery.dataTables.css">
{% endblock %}

{% block content %}
    <h2 class="well">Listado de Grupos</h2>

    {{ form(formulario_coordinadores) }}
    <form method="post" action="{{ path('grupo_grupo_eliminar') }}">
    {% if grupos %}
        <table class="table table-bordered table-condensed table-hover table-striped display" id="tabla">
            <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <th class="seleccion" id="multiple"><i class="glyphicon glyphicon-check"></i></th>
                {% endif %}
                <th>Descripci√≥n</th>
                <th>Coordinador/es</th>
                <th>Alojamiento/s</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for grupo in grupos %}
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td class="seleccion"><input type="checkbox" value="{{ grupo.id }}" name="grupoGrupos[]"/></td>
                    {% endif %}
                    <td>{{ grupo.descripcion }}</td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('usuario_modificar', { 'usuario': grupo.coordinador.id }) }}">{{ grupo.coordinador }}</a>
                        {% else %}
                            {{ grupo.coordinador }}
                        {% endif %}
                    </td>
                    <td>
                        <ul>
                        {% for alojamiento in grupo.alojamientos %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('usuario_modificar', { 'usuario': alojamiento.alumno.id }) }}">{{ alojamiento.alumno }}</a></li>
                                <li>{{ alojamiento.familia }}</li>
                            {% else %}
                                <li>{{ alojamiento.alumno }}</li>
                                <li>{{ alojamiento.familia }}</li>
                            {% endif %}
                            <hr/>
                        {% endfor %}
                        </ul>
                    </td>
                    <td>
                        {% if is_granted('ROLE_ADMIN') or (is_granted('ROLE_COORDINADOR') and app.user.id == grupo.coordinador.id) %}
                            <a href="{{ path('grupo_modificar', { 'grupo': grupo.id }) }}" class="btn btn-default btn-xs">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                            <a href="{{ path('grupo_eliminar', { 'grupo': grupo.id }) }}" class="btn btn-default btn-xs">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3>No hay Grupos para mostrar</h3>
    {% endif %}

    <a href="{{ path('inicio') }}" class="btn btn-info">Volver al Inicio</a>&nbsp;
    {% if grupos %}
        <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-trash"></i> Eliminar Grupos seleccionados</button>
    {% endif %}
    <a href="{{ path('grupo_nuevo') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Crear un nuevo Grupo </a>
    </form>
{% endblock %}

{% block javascripts %}
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% javascripts '@AppBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}