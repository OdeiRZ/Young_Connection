{% extends '::layout.html.twig' %}

{% block stylesheets %}
    {% stylesheets '@AppBundle/Resources/public/css/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}Recordar Usuario{% endblock %}

{% block content %}
    <div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel-body">
{% if error %}
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                    {{ error | trans }}
                </div>
{% endif %}
            <form method="post" action="{{ path('usuario_recordar') }}" class="form-login">
                <div class="header">
                    <a href="{{ path('inicio') }}" class="link-head-left recordar"  title="Volver">
                        <i class="glyphicon glyphicon-home"></i>
                    </a>
                    <span>Regenerar Contraseña</span>
                    <a href="#" class="link-head-right">
                        <!--<i class="glyphicon glyphicon-home"></i>-->
                    </a>
                </div>
                <div class="avatar-login-regenerate">
                    <img src="{{ asset('bundles/app/img/regenerate.gif') }}" alt="">
                </div>
                <div class="inputs">
                    <input name="_username" required placeholder="Correo electrónico" type="text"
                           autofocus="1" autocorrect="off" autocapitalize="off">
                    <div class="clear"></div>
                    <div class="button-login">
                        <button type="submit" >
                            <i class="glyphicon glyphicon-exclamation-sign"></i> &nbsp; Regenerar
                        </button>
                    </div>
                </div>
                <div class="footer-login">
                    ¿Aún no tienes una cuenta? <a href="{{ path('usuario_nuevo') }}">¡Regístrate aquí!</a>
                </div>
            </form>
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% javascripts '@AppBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}