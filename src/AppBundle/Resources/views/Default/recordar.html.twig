{% extends '::layout.html.twig' %}

{% block title %}Recordar Usuario{% endblock %}

{% block content %}
    <div class="container col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-primary">
            <div class="panel-heading">Acceso &mdash; Young Connection</div>
            <div class="panel-body">
                {% if error %}
                    <div class="alert alert-danger alert-dismissable">
                        {{ error | trans }}
                    </div>
                {% endif %}
                <form method="post" action="{{ path('usuario_recordar') }}">
                    <fieldset>
                        <legend>Introduzca su Correo para regenerar su Contraseña</legend>
                        <div class="form-group">
                            <label for="username">Correo electrónico</label>
                            <input type="text" class="form-control" name="_username" autofocus="1" autocorrect="off"
                                   autocapitalize="off" placeholder="Correo con el que se registró" required>
                        </div>
                        <div class="btn-group btn-block">
                            <button type="submit" class="btn btn-primary col-xs-6 col-md-6">
                                <i class="glyphicon glyphicon-exclamation-sign"></i> Regenerar
                            </button>
                            <a href="{{ path('inicio') }}" class="btn btn-success col-xs-6 col-md-6">
                                <i class="glyphicon glyphicon-chevron-left"></i> Volver
                            </a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}